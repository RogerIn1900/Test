<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/weatherOfDayItem"
    android:background="@drawable/bg_forecast_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="12dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forecastDayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textColor="@color/weather_primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forecastDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="01-06"
            android:textColor="@color/weather_secondary_text"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/forecastIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_day"
        android:tint="@color/weather_primary_text" />

    <TextView
        android:id="@+id/forecastConditionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="晴"
        android:textColor="@color/weather_primary_text"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/forecastHighTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25°"
            android:textColor="@color/weather_primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forecastLowTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="18°"
            android:textColor="@color/weather_secondary_text"
            android:textSize="18sp" />
</LinearLayout>

