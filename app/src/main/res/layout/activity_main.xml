<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/weatherFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="true"
        tools:name="com.example.test2.ui.fragment.WeatherTodayFragment" />

    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:alpha="0.85"
        android:background="@drawable/bg_weather_card"
        android:elevation="16dp"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:padding="0dp">

        <LinearLayout
            android:id="@+id/navCityTab"
            android:layout_width="128dp"
            android:layout_height="46dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_nav_tab_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:elevation="4dp"
            android:alpha="0.85">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:duplicateParentState="true"
                android:src="@android:drawable/ic_menu_mylocation"
                android:tint="@color/nav_tab_text_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:duplicateParentState="true"
                android:text="城市"
                android:textColor="@color/nav_tab_text_selector"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navForecastTab"
            android:layout_width="128dp"
            android:layout_height="46dp"
            android:background="@drawable/bg_nav_tab_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:elevation="4dp"
            android:alpha="0.85">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:duplicateParentState="true"
                android:src="@android:drawable/ic_menu_recent_history"
                android:tint="@color/nav_tab_text_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:duplicateParentState="true"
                android:text="预测"
                android:textColor="@color/nav_tab_text_selector"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>