<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_weather_gradient_forecast"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:paddingHorizontal="24dp"
    android:paddingTop="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未来预报"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/weather_primary_text"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forecast_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:text="广州"
            android:textColor="@color/weather_secondary_text"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/weather_of_day_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>

